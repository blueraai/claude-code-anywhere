{
  "name": "claude-sms",
  "version": "0.1.0",
  "description": "SMS notifications and bidirectional communication for Claude Code via Twilio",
  "type": "module",
  "bin": {
    "claude-sms": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "claude",
    "claude-code",
    "sms",
    "twilio",
    "notifications"
  ],
  "author": "chris-bluera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris-bluera/claude-sms.git"
  },
  "bugs": {
    "url": "https://github.com/chris-bluera/claude-sms/issues"
  },
  "homepage": "https://github.com/chris-bluera/claude-sms#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "twilio": "^5.4.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
